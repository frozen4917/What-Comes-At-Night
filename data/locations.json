{
    "campsite": {
        "name": "The Campsite",
        "description_ref": "loc_desc_campsite",
        "menu": [
            {
                "category": "MOVE",
                "subActions": [
                    {
                        "id": "move_to_graveyard",
                        "text_ref": "action_text_move_to_graveyard",
                        "showIf": [ { "gameModeIs": "exploring" }, { "hordeLocationNotIn": ["campsite", "campGate", "insideCabin"] } ],
                        "effects": { "setLocation": "graveyard" }
                    },
                    {
                        "id": "move_to_cabin",
                        "text_ref": "action_text_move_to_cabin",
                        "showIf": [ { "gameModeIs": "exploring" }, { "hordeLocationNotIn": ["insideCabin"] } ],
                        "effects": { "setLocation": "cabin" }
                    }
                ]
            },
            {
                "category": "FORTIFY",
                "subActions": [
                    {
                        "id": "fortify_campGate",
                        "text_ref": "action_text_fortify_campGate",
                        "showIf": [ { "hasItem": "wood" }, { "hordeLocationNotIn": ["campsite", "insideCabin"] } ],
                        "effects": { "changeStat": { "campGate": 10 }, "removeItem": "wood" }
                    }
                ]
            },
            {
                "category": "REST & HIDE",
                "subActions": [
                    {
                        "id": "rest_by_fire",
                        "text_ref": "action_text_rest_fire",
                        "showIf": [ { "hordeLocationNotIn": ["campsite", "insideCabin"] } ],
                        "effects": { "changeStat": { "stamina": 20 } }
                    },
                    {
                        "id": "hide_in_tents",
                        "text_ref": "action_text_hide_tents",
                        "showIf": [ { "gameModeIs": "combat_lone" } ],
                        "effects": { "changeStat": { "noise": -15 }, "setPlayerState": "hiding" }
                    }
                ]
            },
            {
                "category": "GATHER",
                "subActions": [
                    {
                        "id": "search_rec_tent",
                        "name_ref": "action_text_rec_tent",
                        "showIf": [ { "notScavenged": "search_rec_tent"} ],
                        "effects": {
                            "addItems": { "baseball_bat": 1, "bow": 1, "arrow": 5 },
                            "addScavengedFlag": "search_rec_tent",
                            "result_ref": "outcome_search_rec_tent_success"
                        }
                    },
                    {
                        "id": "search_woods",
                        "name_ref": "action_text_search_woods",
                        "effects": {
                            "addItemsOnce": { 
                                "items": { "mushrooms": 4, "garlic": 2 },
                                "flag": "searched_woods_once"
                            },
                            "addRandomItems": { "wood": { "min": 1, "max": 2 } },
                            "result_ref": "outcome_search_woods_success"
                        }
                    },
                    {
                        "id": "search_food_tent",
                        "text_ref": "action_text_search_food_tent",
                        "showIf": [ { "notScavenged": "search_food_tent" } ],
                        "effects": {
                            "addItems": { "canned_food": 2, "bottle": 2, "salt": 2 },
                            "addScavengedFlag": "search_food_tent",
                            "result_ref": "outcome_search_food_tent_success"
                        }
                    },
                    {
                        "id": "search_utility_tent",
                        "text_ref": "action_text_search_utility_tent",
                        "showIf": [ { "notScavenged": "search_utility_tent" } ],
                        "effects": {
                            "addItems": { "bandages": 2, "rag": 2 },
                            "addScavengedFlag": "search_utility_tent",
                            "result_ref": "outcome_search_utility_tent_success"
                        }
                    },
                    {
                        "id": "search_game_tent",
                        "text_ref": "action_text_search_game_tent",
                        "showIf": [ { "notScavenged": "search_game_tent" } ],
                        "effects": {
                            "addItems": { "net": 2, "twine": 2 },
                            "addScavengedFlag": "search_game_tent",
                            "result_ref": "outcome_search_game_tent_success"
                        }
                    },
                    {
                        "id": "search_pier",
                        "text_ref": "action_text_search_pier",
                        "showIf": [ { "notScavenged": "search_pier" } ],
                        "effects": {
                            "addItems": { "twine": 2, "net": 2 },
                            "addScavengedFlag": "search_pier",
                            "result_ref": "outcome_search_pier_success"
                        }
                    }
                ]
            }
        ]
    },

    "cabin": {
        "name": "The Cabin",
        "description_ref": "loc_desc_cabin",
        "menu": [
            {
                "category": "MOVE",
                "subActions": [
                    {
                        "id": "move_to_campsite",
                        "text_ref": "action_text_move_to_campsite",
                        "showIf": [ { "hordeLocationNotIn": ["campsite", "insideCabin"] }, { "hordeLocationNotIn": ["insideCabin"] } ],
                        "effects": { "setLocation": "campsite" }
                    }
                ]
            },
            {
                "category": "FORTIFY",
                "subActions": [
                    {
                        "id": "fortify_cabin",
                        "text_ref": "action_text_fortify_cabin",
                        "showIf": [ { "hasItem": "wood" } ],
                        "effects": { "changeStat": { "cabin": 15 }, "removeItem": "wood" }
                    }
                ]
            },
            {
                "category": "REST & HIDE",
                "subActions": [
                    {
                        "id": "rest_in_cabin",
                        "text_ref": "action_text_rest_cabin",
                        "showIf": [ { "hordeLocationNotIn": ["insideCabin"] } ],
                        "effects": { "changeStat": { "stamina": 35 } }
                    }, 
                    {
                        "id": "hide_in_cabin",
                        "text_ref": "action_text_hide_cabin",
                        "showIf": [ { "gameModeIs": "combat_lone" } ],
                        "effects": { "changeStat": { "noise": -15 }, "setPlayerState": "hiding" }
                    }
                ]
            }, 
            {
                "category": "GATHER",
                "subActions": [
                    {
                        "id": "search_cabin_items",
                        "text_ref": "action_text_search_cabin_items",
                        "showIf": [ { "notScavenged": "search_cabin_items" } ],
                        "effects": {
                            "addItems": { "first_aid_kit": 1, "fuel": 2 },
                            "addScavengedFlag": "search_cabin_items",
                            "result_ref": "outcome_search_cabin_items_success"
                        }
                    }
                ]
            }
        ]
    },

    "graveyard": {
        "name": "The Graveyard",
        "description_ref": "loc_desc_graveyard",
        "menu": [
            {
                "category": "MOVE",
                "subActions": [
                    {
                        "id": "move_to_camp",
                        "text_ref": "action_text_move_to_campsite",
                        "showIf": [ { "gameModeIs": "exploring" }, { "hordeLocationNotIn": ["insideGraveyard", "graveyardGate"] } ],
                        "effects": { "setLocation": "campsite" }
                    }
                ]
            },
            {
                "category": "FORTIFY",
                "subActions": [
                    {
                        "id": "fortify_graveyardGate",
                        "text_ref": "action_text_graveyardGate",
                        "showIf": [ { "hasItem": "wood" }, { "hordeLocationNotIn": ["insideGraveyard"] } ],
                        "effects": { "changeStat": { "graveyardGate": 15 }, "removeItem": "wood" }
                    }
                ]
            },
            {
                "category": "REST & HIDE",
                "subActions": [
                    {
                        "id": "hide_in_hut",
                        "text_ref": "action_text_hide_hut",
                        "showIf": [ { "gameModeIs": "combat_lone" } ],
                        "effects": { "changeStat": { "noise": -15 }, "setPlayerState": "hiding" }
                    }
                ]
            },
            {
                "category": "GATHER",
                "subActions": [
                    {
                        "id": "gather_rowan_tree",
                        "text_ref": "action_text_gather_rowan",
                        "showIf": [ { "notScavenged": "gather_rowan_tree" } ],
                        "effects": {
                            "addItems": { "rowan_berries": 2 },
                            "addScavengedFlag": "gather_rowan_tree",
                            "result_ref": "outcome_gather_rowan_tree_success"
                        }
                    },
                    {
                        "id": "search_gravekeepers_hut",
                        "text_ref": "action_text_search_hut",
                        "showIf": [ { "notScavenged": "search_gravekeepers_hut" } ],
                        "effects": {
                            "addItems": { "shed_key": 1, "bandages": 2 },
                            "addScavengedFlag": "search_gravekeepers_hut",
                            "setToFalse": "shed_locked",
                            "result_ref": "outcome_search_gravekeepers_hut_success"
                        }
                    },
                    {
                        "id": "search_shed",
                        "text_ref": "action_text_search_shed",
                        "showIf": [ { "notScavenged": "search_shed" }, { "flagIsFalse": "shed_locked" }, { "hasItem": "shed_key" } ],
                        "effects": {
                            "addItems": { "axe": 1 },
                            "addScavengedFlag": "search_shed",
                            "result_ref": "outcome_search_shed_success"
                        }
                    }
                ]
            }
        ]
    }
}